<Window x:Class="CarWorkshopWPF.Views.EditCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytuj Klienta" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Imię i nazwisko:"/>
            <TextBox Text="{Binding Name, Mode=TwoWay}" Width="200"/>

            <TextBlock Text="Numer telefonu:"/>
            <TextBox Text="{Binding PhoneNumber, Mode=TwoWay}" Width="200"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Zapisz" Click="Save_Click" Width="80" Margin="5"/>
                <Button Content="Anuluj" Click="Cancel_Click" Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

